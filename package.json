{
  "name": "leaf-pack",
  "version": "1.0.0",
  "description": "Concord Consortium leaf pack sim",
  "main": "index.js",
  "jest": {
    "testURL": "https://leaf-pack.unexisting.url.com",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/@concord-consortium/react-components"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cypress/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/utilities/test-utils.ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "start": "webpack serve",
    "build": "npm-run-all lint:build build:webpack",
    "build:webpack": "webpack --mode production",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:build": "eslint -c \".eslintrc.build.js\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "test:all": "npm-run-all build test start",
    "test:coverage": "jest --coverage",
    "test:debug": "node --nolazy --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache",
    "test:watch": "jest --watch",
    "test:coverage:watch": "jest --coverage --watchAll",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:full": "npm-run-all test test:cypress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/leaf-pack.git"
  },
  "author": "Concord Consortium",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concord-consortium/leaf-pack/issues"
  },
  "homepage": "https://github.com/concord-consortium/leaf-pack#readme",
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "report-dir": "coverage-cypress"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.2",
    "@cypress/webpack-preprocessor": "^5.6.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.7.3",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@types/react-modal": "^3.12.0",
    "@types/react-tabs": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "autoprefixer": "^10.2.4",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.6.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.0.2",
    "cypress": "^5.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.20.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.8",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.2.0",
    "sass-loader": "^10.1.1",
    "script-loader": "^0.7.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2",
    "wait-on": "^5.2.1",
    "webpack": "^5.24.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@concord-consortium/lara-interactive-api": "^1.0.2",
    "@concord-consortium/react-components": "^0.5.0",
    "@material-ui/core": "^4.11.3",
    "@testing-library/react": "^11.2.5",
    "@types/classnames": "^2.2.11",
    "@types/react-transition-group": "^4.4.1",
    "classnames": "^2.2.6",
    "lodash.clonedeep": "^4.5.0",
    "query-string": "^6.14.0",
    "react": "^17.0.1",
    "react-dnd": "^11.1.3",
    "react-dnd-preview": "^6.0.2",
    "react-dnd-touch-backend": "^11.1.3",
    "react-dom": "^17.0.1",
    "react-modal": "^3.12.1",
    "react-tabs": "^3.2.0",
    "react-transition-group": "^4.4.1"
  }
}
